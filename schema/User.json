{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "User",
	"description": "An authenticated User of the monumentous sites",
	"type": "object",
	"properties": {
		"id": {
			"description": "The unique identifier of the user",
			"type":"integer"
		},
		"username": {
			"description": "The alias of the user",
			"type": "string"
		},
		"password": {
			"type":"string"
		},
		"email": {
			"type":"string",
			"format":"email"
		}
	},
	"required":["username","password"]
}